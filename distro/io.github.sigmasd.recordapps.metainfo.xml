<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.sigmasd.recordapps</id>
  <name>Record Apps</name>
  <summary>Record audio from individual applications</summary>
  <developer_name>Bedis Nbiba</developer_name>
  <description>
    <p>
      Record Apps is a simple application that allows you to record audio from individual applications.
      It uses PulseAudio to capture the audio output of each application separately.
    </p>
  </description>
  <launchable type="desktop-id">io.github.sigmasd.recordapps.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <caption>Record Apps main window showing the list of applications to record</caption>
      <image>https://raw.githubusercontent.com/sigmaSd/RecordApps/refs/heads/master/distro/demo.png</image>
    </screenshot>
  </screenshots>
    <provides>
        <binary>run.sh</binary>
    </provides>
    <keywords>
      <keyword>audio</keyword>
      <keyword>record</keyword>
      <keyword>pulseaudio</keyword>
      <keyword>application</keyword>
    </keywords>
  <metadata_license>CC0-1.0</metadata_license>
